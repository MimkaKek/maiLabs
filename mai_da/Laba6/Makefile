#======================================
# Параметры сборки
# TARGET - название исполняемого файла
#======================================
TARGET  = main
#======================================


#======================================
# Параметры компиляции
# СС - компилятор
# CFLAGS - флаги для компиляции
#======================================
CC      = g++
CFLAGS  = -pedantic -Wall -Werror -Wno-sign-compare -Wno-long-long -lm -c
#======================================
# Тут подхватываются файлы .cpp
#======================================
SRC    := $(wildcard *.cpp)
#======================================
OBJS   := $(SRC:.cpp=.o)

.PHONY: all clean

all: $(TARGET)

$(TARGET): $(OBJS)
	$(CC) $(DEBUG) $^ -o $@
	
%.o: %.cpp
	$(CC) $(CFLAGS) $(DEBUG) $<
	
%.o: $(ILIB)%.cpp $(ILIB)%.hpp
	$(CC) $(CFLAGS) $(DEBUG) $<

clean:
	rm *.o $(TARGET)
